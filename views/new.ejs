<%- include ('./partials/constant/head.ejs') %>

<!--  =============== HEADER ==============   -->
        <div class="header">
            <h1>Add a Pokemon</h1>
            <a href="/pokemon">
                <input class='home' type="submit" value="Return to Pokedex">
            </a>
        </div>
<!--  =============== HEADER ==============   -->

<!--  ================ FORM ===============   -->
<!-- post method submits filled out data to the /pokemon address -->
<form action="/pokemon" method="post">
<!-- --------- -->
<!-- name form -->
<div class="name-form">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="lorem pokemon">
</div>
<!-- ---------- -->
<!-- image form -->
<div class="image-form">
    <img src="https://lorempokemon.fakerapi.it/pokemon" alt="Picture of pokemon">
    <input type="text" name="img" id="img" value="https://lorempokemon.fakerapi.it/pokemon">
</div>
<!-- ---------- -->
<!-- types form -->
<div class="pokemon-type-change">
    <%- include ('./partials/type/edit-type.ejs') %>
</div>
<!-- ---------- -->
<!-- stats form -->
<div class="pokemon-stats-change">
    <%- include ('./partials/stats/new-stats.ejs') %>
</div>
<!-- --------- -->
<!--- submit ---->
<input class="create" type="submit" value="Create">
<!-- --------- -->
</form>
<!--  ================ FORM ===============   -->


<%- include ('./partials/constant/footer.ejs') %>